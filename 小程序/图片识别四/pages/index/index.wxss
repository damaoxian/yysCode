/* 添加键盘相关样式 */
/* 键盘容器的基础样式 */
.keyboard {
  position: fixed;      /* 固定定位,不随页面滚动 */
  bottom: -100%;        /* 初始位置在屏幕底部以下,实现隐藏效果 */
  left: 0;             /* 左对齐 */
  width: 100%;         /* 宽度占满屏幕 */
  background: #d1d5db; /* 设置键盘背景色为浅灰色 */
  transition: bottom 0.3s;  /* 添加底部位置的过渡动画,持续0.3秒 */
  z-index: 1000;       /* 确保键盘显示在其他元素上方 */
  padding: 10rpx;      /* 设置内边距 */
}

/* 键盘显示时的样式 */
.keyboard-show {
  bottom: 0;           /* 显示时移动到屏幕底部 */
}

/* 键盘顶部区域样式 */
.keyboard-header {
  display: flex;                /* 使用弹性布局 */
  align-items: center;          /* 垂直居中对齐 */
  padding: 20rpx;              /* 内边距20rpx */
  background: #fff;            /* 背景色白色 */
  border-radius: 8rpx;         /* 圆角8rpx */
  margin-bottom: 10rpx;        /* 底部外边距10rpx */
}

/* 键盘输入框样式 */
.keyboard-input {
  flex: 1;                     /* 占据剩余空间 */
  height: 60rpx;              /* 高度60rpx */
  line-height: 60rpx;         /* 行高60rpx */
  padding: 0 20rpx;           /* 左右内边距20rpx */
  font-size: 32rpx;           /* 字体大小32rpx */
}

/* 键盘按键区域样式 */
.keyboard-keys {
  padding: 10rpx;             /* 内边距10rpx */
}

/* 按键行样式 */
.key-row {
  display: flex;
  justify-content: space-between;  /* 使按键均匀分布 */
  margin-bottom: 10rpx;           /* 行间距 */
  width: 100%;
}

/* 单个按键样式 */
.key {
  flex: 1;                        /* 让每个按键平均分配空间 */
  height: 80rpx;                  /* 固定高度 */
  margin: 0 5rpx;                /* 按键之间的间距 */
  background: #ffffff;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

/* 最后一行的特殊按钮 */
.space-key {
  flex: 2;                        /* 空格键占用更多空间 */
}

.confirm-key {
  flex: 1;                      /* 确定键稍大一些 */
  background: #07c160;            /* 微信绿色 */
  color: #fff;
}

/* 按键按下状态样式 */
.key:active {
  background: #e8e8e8;       /* 按下时背景色变为浅灰色 */
}

/* Shift键样式 */
.shift-key {
  width: 80rpx;              /* 宽度80rpx */
}

/* Shift键激活状态样式 */
.shift-key .active {
  color: #07c160;            /* 激活时文字颜色为绿色 */
}

/* 删除键样式 */
