.container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.content {
  flex: 1;
  width: 100%;
  background-color: #f7f7f7;
}

.tab-bar {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #ffffff;
  border-top: 1rpx solid #eeeeee;
  position: fixed;
  bottom: 0;
  left: 0;
}

.tab-item {
  font-size: 28rpx;
  color: #333333;
  padding: 20rpx 0;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.active {
  color: #07c160;  /* 微信绿色 */
  font-weight: bold;
}

.active::after {
  content: '';
  position: absolute;
  top: -6rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #07c160;
}

.input-page {
  padding: 20rpx;
  padding-bottom: 120rpx;
}

.image-section {
  margin-bottom: 20rpx;
}

.image-preview {
  width: 100%;
  height: 300rpx;
  background: #fff;
  border: 1px solid #ddd;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}

.button-group {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.btn {
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  background: #fff;
  border: 1px solid #ddd;
}

.result-section {
  width: 100%;
  min-height: 300rpx;
  background: #fff;
  border: 1px solid #ddd;
  margin-bottom: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.result-text {
  width: 100%;
  min-height: 260rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  padding: 0;
}

.input-section {
  margin-bottom: 20rpx;
}

.input-group {
  display: flex;
  gap: 20rpx;
}

.word-btn, .translate-btn {
  flex: 1;
  font-size: 28rpx;
  padding: 10rpx 0;
  background: #fff;
  border: 1px solid #ddd;
}

.translate-btn.disabled {
  background: #f5f5f5;
  color: #999;
  border-color: #eee;
}

.list-section {
  background: #fff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
  overflow: hidden;
}

.list-item {
  padding: 20rpx;
  border-bottom: 1px solid #eee;
}

.list-item:last-child {
  border-bottom: none;
}

.word-text {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.translation-text {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.item-checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 1px solid #ddd;
  margin-right: 20rpx;
}

.item-buttons {
  display: flex;
  gap: 10rpx;
}

.edit-btn, .delete-btn {
  font-size: 24rpx;
  padding: 6rpx 20rpx;
  background: #fff;
  border: 1px solid #ddd;
  min-width: auto;
  line-height: 1.5;
}

.delete-btn {
  color: #ff4d4f;
  border-color: #ff4d4f;
}

/* 整理页面样式 */
.arrange-page {
  padding: 20rpx;
  padding-bottom: 120rpx;
  display: flex;
  flex-direction: column;
  height: 100%;
}

.arrange-list {
  background: #fff;
  border: 1px solid #ddd;
  border-radius: 8rpx;
}

.arrange-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1px solid #eee;
}

.arrange-word {
  flex: 2;
  padding: 0 20rpx;
  font-weight: bold;
}

.arrange-translation {
  flex: 3;
  padding: 0 20rpx;
  color: #666;
}

.arrange-unit {
  width: 120rpx;
  padding: 0 20rpx;
}

.unit-text {
  padding: 10rpx 20rpx;
  background: #f5f5f5;
  border-radius: 4rpx;
  text-align: center;
  font-size: 24rpx;
}

.arrange-delete {
  width: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.delete-icon {
  color: #ff4d4f;
  font-size: 40rpx;
  font-weight: bold;
}

/* 底部保存按钮 */
.arrange-footer {
  position: fixed;
  bottom: 100rpx;
  left: 0;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.save-btn {
  background-color: #07c160;
  color: #fff;
}

.cancel-btn {
  background-color: #999;
  color: #fff;
}

.save-btn, .cancel-btn {
  font-size: 28rpx;
  padding: 16rpx 40rpx;
  border-radius: 8rpx;
  margin-left: 20rpx;
}

.save-btn:active {
  opacity: 0.8;
}

