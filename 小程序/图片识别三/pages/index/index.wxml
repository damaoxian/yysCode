<view class="container">
  <!-- 内容区域 -->
  <view class="content">
    <view wx:if="{{currentTab == 0}}" class="test-page">
      <!-- 选择单元区域 -->
      <view class="unit-section">
        <text class="unit-label">选择单元：</text>
        <picker bindchange="handleUnitChange" value="{{currentUnit}}" range="{{unitList}}">
          <view class="unit-picker">
            {{unitList[currentUnit] || 'L1'}}
            <text class="picker-arrow">▼</text>
          </view>
        </picker>
      </view>

      <!-- 释义区域 -->
      <view class="test-translation-section">
        <text class="translation-label">释义：</text>
        <view class="translation-content">very difficult to do or deal with</view>
      </view>

      <!-- 输入区域 -->
      <view class="test-input-section">
        <input class="test-input" placeholder="请输入" />
        <button class="confirm-btn">确定</button>
      </view>

      <!-- 底部按钮区域 -->
      <view class="test-footer">
        <button class="test-btn start-btn">开始</button>
        <button class="test-btn end-btn">结束</button>
      </view>
    </view>
    <view wx:if="{{currentTab == 1}}" class="input-page">
      <!-- 图片选择和识别区域 -->
      <view class="image-section">
        <view class="image-preview">
          <image wx:if="{{tempImage}}" src="{{tempImage}}" mode="aspectFit"></image>
          <view wx:else class="placeholder">预览区域</view>
        </view>
        <view class="button-group">
          <button class="btn" bindtap="chooseImage">选择图片</button>
          <button class="btn" bindtap="recognizeText">识别文字</button>
        </view>
      </view>

      <!-- 识别结果显示区域 -->
      <view class="recognition-result" >
        <view class="result-content" selectable="true" >{{recognizedText}}</view>
      </view>

      <!-- 单词和释义输入区域 -->
      <view class="input-section">
        <view class="input-group">
          <button class="word-btn">单词</button>
          <button class="translate-btn">释义</button>
        </view>
      </view>

      <!-- 列表区域 -->
      <view class="list-section">
        <view class="list-item" wx:for="{{word_mean.slice(-3)}}" wx:key="id">
          <view class="item-content">
            <text selectable="true" class="word-text">{{item.word || '等待输入...'}}</text>
            <text selectable="true" class="translation-text">{{item.mean || '等待输入...'}}</text>
          </view>
          <view class="item-buttons">
            <button class="edit-btn" bindtap="editWord" data-index="{{index}}">修改</button>
            <button class="delete-btn" bindtap="deleteWord" data-index="{{index}}">删除</button>
          </view>
        </view>
      </view>
    </view>
    <view wx:if="{{currentTab == 2}}" class="arrange-page">
      <view class="arrange-list">
        <!-- 列表内容 -->
        <view class="arrange-item" wx:for="{{wordList}}" wx:key="index">
          <view class="arrange-word">
            <input value="{{item.word}}" data-index="{{index}}" data-type="word" bindinput="handleArrangeInput"/>
          </view>
          <view class="arrange-translation">
            <input value="{{item.translation}}" data-index="{{index}}" data-type="translation" bindinput="handleArrangeInput"/>
          </view>
          <!-- 添加删除按钮 -->
          <view class="arrange-delete" bindtap="handleArrangeDelete" data-index="{{index}}">
            <text class="delete-icon">×</text>
          </view>
          <view class="arrange-input">
            <input placeholder="请输入" data-index="{{index}}" data-type="input" bindinput="handleArrangeInput"/>
          </view>
        </view>
      </view>
      <!-- 添加底部保存按钮 -->
      <view class="arrange-footer">
        <button class="save-btn" bindtap="handleArrangeSave">保存</button>
      </view>
    </view>
    <view wx:if="{{currentTab == 3}}" class="record-page">
      <view class="record-title">测试结果</view>
      <view class="record-table">
        <view class="table-header">
          <view class="th">日期</view>
          <view class="th">时间</view>
          <view class="th">单元</view>
          <view class="th">正确数</view>
          <view class="th">错误数</view>
          <view class="th">正确率</view>
          <view class="th">详情</view>
        </view>
        <view class="table-body">
          <view class="table-row" wx:for="{{recordList}}" wx:key="index">
            <view class="td">{{formatDate(item.date)}}</view>
            <view class="td">{{item.time}}</view>
            <view class="td">{{item.unit}}</view>
            <view class="td">{{item.correct}}</view>
            <view class="td">{{item.wrong}}</view>
            <view class="td">{{item.accuracy}}</view>
            <view class="td">查看</view>
          </view>
        </view>
      </view>
    </view>
  </view>

  <!-- 底��导航栏 -->
  <view class="tab-bar">
    <view class="tab-item {{currentTab==0 ? 'active' : ''}}" bindtap="switchTab" data-index="0">
      测试
    </view>
    <view class="tab-item {{currentTab==1 ? 'active' : ''}}" bindtap="switchTab" data-index="1">
      录入
    </view>
    <view class="tab-item {{currentTab==2 ? 'active' : ''}}" bindtap="switchTab" data-index="2">
      整理
    </view>
    <view class="tab-item {{currentTab==3 ? 'active' : ''}}" bindtap="switchTab" data-index="3">
      记录
    </view>
  </view>
</view> 