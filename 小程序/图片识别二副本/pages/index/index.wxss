.container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.content {
  flex: 1;
  width: 100%;
  background-color: #f7f7f7;
}

.tab-bar {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #ffffff;
  border-top: 1rpx solid #eeeeee;
  position: fixed;
  bottom: 0;
  left: 0;
}

.tab-item {
  font-size: 28rpx;
  color: #333333;
  padding: 20rpx 0;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.active {
  color: #07c160;  /* 微信绿色 */
  font-weight: bold;
}

.active::after {
  content: '';
  position: absolute;
  top: -6rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #07c160;
}

.input-page {
  padding: 20rpx;
  padding-bottom: 120rpx;
}

.image-section {
  margin-bottom: 20rpx;
}

.image-preview {
  width: 100%;
  height: 300rpx;
  background: #fff;
  border: 1px solid #ddd;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}

.button-group {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.btn {
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  background: #fff;
  border: 1px solid #ddd;
}

.result-section {
  width: 100%;
  min-height: 300rpx;
  background: #fff;
  border: 1px solid #ddd;
  margin-bottom: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.input-section {
  margin-bottom: 20rpx;
}

.input-group {
  display: flex;
  gap: 20rpx;
}

.word-btn, .translate-btn {
  flex: 1;
  font-size: 28rpx;
  padding: 10rpx 0;
  background: #fff;
  border: 1px solid #ddd;
}

.list-section {
  background: #fff;
  border: 1px solid #ddd;
}

.list-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1px solid #eee;
}

.item-checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 1px solid #ddd;
  margin-right: 20rpx;
}

.item-content {
  flex: 1;
}

.item-buttons {
  display: flex;
  gap: 10rpx;
}

.edit-btn, .delete-btn {
  font-size: 24rpx;
  padding: 6rpx 20rpx;
  background: #fff;
  border: 1px solid #ddd;
  min-width: auto;
  line-height: 1.5;
}

.delete-btn {
  color: #ff4d4f;
  border-color: #ff4d4f;
}

.word-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 6rpx;
}

.translation-text {
  font-size: 24rpx;
  color: #666;
}

/* 整理页面样式 */
.arrange-page {
  padding: 20rpx;
  padding-bottom: 120rpx;
  display: flex;
  flex-direction: column;
  height: 100%;
}

.arrange-list {
  background: #fff;
  border: 1px solid #ddd;
  border-radius: 8rpx;
}

.arrange-item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1px solid #eee;
}

.arrange-word,
.arrange-translation,
.arrange-input {
  flex: 1;
  padding: 0 10rpx;
}

.arrange-item input {
  width: 100%;
  height: 60rpx;
  border: 1px solid #eee;
  border-radius: 4rpx;
  padding: 0 10rpx;
  font-size: 28rpx;
  color: #333;
}

/* 删除按钮样式 */
.arrange-delete {
  width: 80rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 10rpx;
  margin: 0 10rpx;
}

.delete-icon {
  color: #ff4d4f;
  font-size: 48rpx;
  font-weight: bold;
  line-height: 1;
}

.arrange-delete:active {
  opacity: 0.7;
}

/* 底部保存按钮 */
.arrange-footer {
  position: fixed;
  bottom: 100rpx;
  left: 0;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.save-btn {
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 8rpx;
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 auto;
}

.save-btn:active {
  opacity: 0.8;
}

/* 测试页面样式 */
.test-page {
  padding: 40rpx;
  padding-bottom: 120rpx;
}

/* 选择单元区域 */
.unit-section {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.unit-label {
  font-size: 32rpx;
  color: #333;
}

.unit-picker {
  flex: 1;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 20rpx;
  background: #fff;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.picker-arrow {
  font-size: 24rpx;
  color: #999;
}

/* 释义区域 */
.test-translation-section {
  background: #fff;
  padding: 30rpx;
  border-radius: 8rpx;
  margin-bottom: 40rpx;
  border: 1px solid #ddd;
}

.translation-label {
  font-size: 32rpx;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.translation-content {
  font-size: 32rpx;
  color: #333;
  line-height: 1.5;
}

/* 输入区域 */
.test-input-section {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.test-input {
  flex: 1;
  height: 80rpx;
  background: #fff;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 32rpx;
}

.confirm-btn {
  width: 160rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #ccc;
  color: #fff;
  font-size: 32rpx;
  border-radius: 8rpx;
  padding: 0;
}

/* 底部按钮区域 */
.test-footer {
  display: flex;
  justify-content: space-between;
  padding: 0 40rpx;
  margin-top: 200rpx;
}

.test-btn {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #ccc;
  color: #fff;
  font-size: 32rpx;
  border-radius: 8rpx;
}

/* 添加记录页面的样式 */
.record-page {
  padding: 20rpx;
  background: #fff;
  min-height: 100vh;
}

.record-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
}

.record-table {
  width: 100%;
  border: 1px solid #e8e8e8;
  border-radius: 8rpx;
}

.table-header {
  display: flex;
  background: #f5f5f5;
  font-weight: bold;
  border-bottom: 1px solid #e8e8e8;
}

.table-body {
  background: #fff;
}

.table-row {
  display: flex;
  border-bottom: 1px solid #e8e8e8;
}

.table-row:last-child {
  border-bottom: none;
}

.th, .td {
  flex: 1;
  padding: 20rpx 10rpx;
  text-align: center;
  font-size: 24rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.th {
  color: #333;
}

.td {
  color: #666;
}

/* 调整详情列的样式 */
.th:last-child, .td:last-child {
  color: #1890ff;
}